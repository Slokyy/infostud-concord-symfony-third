{% extends 'base.html.twig' %}

{% block title %}Driver Profile{% endblock %}
{% block body %}

  <div class="container pt-3">
    <div class="row">
      <h1 class="mt-4 mb-5 text-center">{{ vehicle.brand }} {{ vehicle.model }}</h1>

      <div class="card col-3">
        <h3 class="text-center">Profile Info</h3>
        <div class="card-header">
          Vehicle: {{ vehicle.brand }} {{ vehicle.model }}
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Purchase Date: {{ vehicle.purchaseDate | date('d / m / Y') }}</li>
        </ul>
      </div>
      <div class="col-9">
        <div class="container">

          <h3 class="mt-4 mb-3">Reservation history</h3>

          <div class="container">
            <table id="table-history" class="table table-striped table-hover text-center">
              <thead>
              <tr>
                <th>Reservation ID</th>
                <th>Driver Name</th>
                <th>Reservation Date</th>
              </tr>
              </thead>
              <tbody id="table-history-body">
              {% for vehicleReservation in vehicleReservations %}
                <tr>
                  <td>{{ vehicleReservation.id }}</td>
                  <td>{{ vehicleReservation.driver.firstname }} {{ vehicleReservation.driver.lastname }}</td>
                  <td>{{ vehicleReservation.dateReserved | date('d / m / Y') }}</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>


  </div>

{% endblock %}